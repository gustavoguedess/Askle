<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="510dp"
    tools:context="com.askle.askle.TelaConfPerfil">



    <ImageView
        android:id="@+id/imgUsuConfPerf"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/img2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/botao_customizado2"
        android:layout_marginStart="91dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_alignBottom="@+id/imgUsuConfPerf"
        android:layout_alignStart="@+id/imgUsuConfPerf" />

    <EditText
        android:id="@+id/txtNomeUsuConf"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_below="@+id/imgUsuConfPerf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome do Usuario" />

    <EditText
        android:id="@+id/txtEmailUsuConf"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email do usuario"
        android:layout_below="@+id/txtNomeUsuConf"
        android:layout_alignStart="@+id/txtTelefoneUsuConf" />

    <EditText
        android:id="@+id/txtTelefoneUsuConf"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Telefone do usuario"
        android:layout_below="@+id/txtEmailUsuConf"
        android:layout_alignEnd="@+id/txtRgUsuConf" />

    <EditText
        android:id="@+id/txtRgUsuConf"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_below="@+id/txtTelefoneUsuConf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="RG do usuario" />

    <Button
        android:id="@+id/btSalvarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:width="150dp"
        android:layout_marginBottom="13dp"
        android:text="Salvar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
    </ScrollView>