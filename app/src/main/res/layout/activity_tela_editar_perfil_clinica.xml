<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        tools:context="com.askle.askle.TelaConfPerfil">



        <ImageView
            android:id="@+id/imgConsConfPerf"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/image_border"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/botao_customizado2"
            android:layout_marginStart="91dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_alignBottom="@+id/imgConsConfPerf"
            android:layout_alignStart="@+id/imgConsConfPerf" />

        <EditText
            android:id="@+id/txtNomeConsConfig"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textedit_customizado"
            android:gravity="center"
            android:layout_below="@+id/imgConsConfPerf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nome do Consultorio" />

        <EditText
            android:id="@+id/txtEmailConsConf"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textedit_customizado"
            android:gravity="center"
            android:layout_marginTop="37dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email do Consultorio"
            android:layout_below="@+id/txtNomeConsConfig"
            android:layout_alignStart="@+id/txtTelefoneConsConf" />

        <EditText
            android:id="@+id/txtTelefoneConsConf"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textedit_customizado"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Telefone do Consultorio"
            android:layout_below="@+id/txtEmailConsConf"
            android:layout_alignEnd="@+id/txtMedicosConf" />

        <EditText
            android:id="@+id/txtMedicosConf"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textedit_customizado"
            android:gravity="center"
            android:layout_below="@+id/txtTelefoneConsConf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="MÃ©dico(a/s)" />

        <Button
            android:id="@+id/btSalvarPerfilCons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:width="150dp"
            android:layout_marginBottom="13dp"
            android:text="Salvar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/txtCrmsPerfCons"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textedit_customizado"
            android:gravity="center"
            android:layout_below="@+id/txtMedicosConf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="CRMs" />


    </RelativeLayout>
</ScrollView>