<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="950dp"
    tools:context="com.askle.askle.TelaMarcarConsulta">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:text="Marcar Consulta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="45dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Informações Consulta" />

    <View
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginBottom="-10dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:id="@+id/view2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Data da Consulta:"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignTop="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <EditText
        android:id="@+id/txtDataCons"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="DD/MM/AAAA"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Horário:"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txtDataCons"
        android:layout_alignStart="@+id/txtHorarioCons" />

    <EditText
        android:id="@+id/txtHorarioCons"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_alignEnd="@+id/txtDataCons"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="hh:mm" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignStart="@+id/txtHorarioCons"
        android:layout_below="@+id/txtHorarioCons"
        android:layout_marginTop="37dp"
        android:text="Médico:" />

    <Spinner
        android:id="@+id/spinnerMedicos"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="22dp"
        android:layout_alignEnd="@+id/textView11" />


    <View
        android:layout_alignTop="@+id/spinnerMedicos"
        android:layout_marginTop="45dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:id="@+id/view3" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Informações Pessoais" />

    <View
        android:layout_alignBottom="@+id/textView18"
        android:layout_marginBottom="-10dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:id="@+id/view4" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerMedicos"
        android:layout_alignTop="@+id/view4"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:text="Nome Completo:" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ex: Jose da Silva Pinheiros"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_alignEnd="@+id/txtDataNasc" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:text="Data de Nascimento:" />

    <EditText
        android:id="@+id/txtDataNasc"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_alignEnd="@+id/txtHorarioCons"
        android:layout_below="@+id/textView21"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="DD/MM/AAAA" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="RG (Identidade):"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@+id/txtDataNasc"
        android:layout_alignStart="@+id/txtDataNasc" />

    <EditText
        android:id="@+id/txtRG"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:gravity="center"
        android:layout_alignStart="@+id/textView22"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="xxxxxxx-x" />

    <Button
        android:id="@+id/btProntoCons"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:text="PRONTO!"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/txtRG"
        android:layout_alignEnd="@+id/textView6" />


</RelativeLayout>
</ScrollView>