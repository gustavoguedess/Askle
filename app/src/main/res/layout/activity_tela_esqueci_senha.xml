<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askle.askle.TelaEsqueciSenha">


    <EditText
        android:id="@+id/editTextEsq"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:background="@drawable/textedit_customizado"
        android:layout_marginTop="158dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Escreva seu nome de usuario"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:text="Serviço de Recuperação de Senha"
        android:layout_alignBottom="@+id/editTextEsq"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/logoazul"
        android:layout_above="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />

    <Button
        android:id="@+id/btRecSenha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:text="Envie-me uma nova senha"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/editTextEsq"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>