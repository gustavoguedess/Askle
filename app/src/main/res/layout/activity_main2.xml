<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    tools:context="com.askle.askle.Main2Activity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:text="Área da Clínica"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/logoazul"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btPerfilCons"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="114dp"
        android:text="perfil da clínica"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btSolicCons"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="49dp"
        android:text="solicitações de consulta"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/btPerfilCons" />

    <Button
        android:id="@+id/btConfCons"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_below="@+id/btPerfilCons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Configurações" />

    <Button
        android:id="@+id/btSairCons"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/textedit_customizado"
        android:textColor="#ff00"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="sair" />


</RelativeLayout>
</ScrollView>